<Window x:Class="CryptoExchangeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoExchangeApp"
        mc:Ignorable="d"
        Title="CryptoExchangeApp" Height="450" Width="800">
    <Grid>
        <Button x:Name="GetPriceButton" Content="Get BTC Price" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="40" Click="GetPriceButton_Click"/>
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,50,0,0" Width="500" Height="40"/>
    </Grid>
</Window>
